{
  "name": "workspace",
  "private": true,
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm:dev-*\"",
    "dev-theme": "pnpm --filter=theme-doc exec -- npm run dev",
    "dev-site": "pnpm --filter=doc-site exec -- npm run dev",
    "format": "prettier --write ./**/*.{js,ts,tsx}",
    "ver": "pnpm recursive  --filter vite-pages-theme-doc2 exec -- npm version",
    "ver:p": "npm run ver -- patch",
    "ver:mi": "npm run ver -- minor",
    "ver:major": "npm run ver -- major",
    "pub": "pnpm -r publish  --filter vite-pages-theme-doc2",
    "update-deps": "pnpm -r update -i -L",
    "update-local-deps": "pnpm update -r  vite-pages-theme-doc2 --workspace --filter \"!./packages/create-project/**\"",
    "test": "playwright test -c ./test-setup",
    "test-serve": "cross-env VITE_PAGES_MODE=serve pnpm test",
    "test-build": "cross-env VITE_PAGES_MODE=build pnpm test",
    "test-ssr": "cross-env VITE_PAGES_MODE=ssr pnpm test",
    "test-debug": "pnpm test -- --debug",
    "build:docs": "pnpm --filter doc-site run ssr-for-deploy",
    "postinstall": "node ./scripts/linkBins.js",
    "install-test-deps": "playwright install --with-deps chromium",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@playwright/test": "~1.23.4",
    "@pnpm/link-bins": "^7.2.4",
    "@pnpm/logger": "^4.0.0",
    "@types/node": "^17.0.42",
    "@types/wait-on": "^5.3.1",
    "cross-env": "^7.0.3",
    "execa": "^5.1.1",
    "get-port": "^5.1.1",
    "husky": "^8.0.1",
    "prettier": "^2.7.1",
    "sirv": "^2.0.2",
    "slash": "^3.0.0",
    "typescript": "^4.8.3",
    "wait-on": "^6.0.1"
  },
  "pnpm": {
    "overrides": {
      "react": "^17.0.1",
      "react-dom": "^17.0.1",
      "vite-pages-theme-doc2": "workspace:*"
    },
    "peerDependencyRules": {
      "ignoreMissing": [
        "react",
        "react-dom",
        "@mdx-js/mdx",
        "@alifd/meet-react",
        "typescript",
        "rollup",
        "@babel/core"
      ]
    }
  }
}
